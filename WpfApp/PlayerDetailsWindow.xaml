<Window x:Class="WpfApp.PlayerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="PlayerDetails" Height="400" Width="300">
    <Grid>
        <StackPanel>
            <Image x:Name="imgPlayer" Height="100" Width="100" Margin="10"/>
            <TextBlock x:Name="tbPlayerName" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <TextBlock x:Name="tbShirtNumber" FontSize="16" Margin="10"/>
            <TextBlock x:Name="tbGoalsScored" FontSize="16" Margin="10"/>
            <TextBlock x:Name="tbYellowCards" FontSize="16" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
