<Window x:Class="WpfApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="400" Width="400">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock 
            x:Name="tbSettings"
            HorizontalAlignment="Center"
            Grid.Row="0"
            Margin="0 10 0 0"
            FontSize="25"
            Text="Settings" />

        <Grid Grid.Row="1" Margin="0 25 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock 
                x:Name="tbTournament"
                HorizontalAlignment="Center"
                Grid.Row="0"
                Text="Change tournament:"/>
            <ComboBox 
                x:Name="cbTournament"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Margin="0 7 0 0"
                Width="150"
                SelectedIndex="{Binding GenderCategoryIndex, Mode=TwoWay}">
                <ComboBoxItem>2018 FIFA Men's World Cup</ComboBoxItem>
                <ComboBoxItem>2019 FIFA Women's World Cup</ComboBoxItem>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock 
                x:Name="tbLanguage"
                HorizontalAlignment="Center"
                Grid.Row="0"
                Text="Change language:"/>
            <ComboBox 
                x:Name="cbLanguage"
                Grid.Row="1"
                HorizontalAlignment="Center"
                                Width="150"

                SelectedIndex="{Binding LanguageIndex, Mode=TwoWay}">
                <ComboBoxItem>English</ComboBoxItem>
                <ComboBoxItem>Hrvatski</ComboBoxItem>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock 
                x:Name="tbResolution"
                Grid.Row="0"
                Text="Change Resolution:"
                HorizontalAlignment="Center"/>
            <ComboBox 
                x:Name="cbResolution"
                Grid.Row="1"
                HorizontalAlignment="Center"                
                SelectedValuePath="Content"
                                Width="150"

                SelectedIndex="{Binding ResolutionIndex, Mode=TwoWay}">
                <ComboBoxItem>FULLSCREEN</ComboBoxItem>
                <ComboBoxItem>r1280x720</ComboBoxItem>
                <ComboBoxItem>r1024x768</ComboBoxItem>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="4" Margin="0 10 0 0">
            <Button
                x:Name="btnApply"
                Content="Apply" 
                Margin="0 20 0 0"
                Width="75"
                Height="25"
                HorizontalAlignment="Center"
                Click="OnApplyButtonClick"/>
        </Grid>
    </Grid>
</Window>

